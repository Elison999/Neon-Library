local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")
local HttpService = game:GetService("HttpService")

local LocalPlayer = Players.LocalPlayer
local Mouse = LocalPlayer:GetMouse()

--// Utilitários de UI
local Utility = {}

function Utility:Create(instanceType, properties)
    local instance = Instance.new(instanceType)
    for k, v in pairs(properties) do
        instance[k] = v
    end
    return instance
end

function Utility:Tween(instance, info, goals)
    local tween = TweenService:Create(instance, info, goals)
    tween:Play()
    return tween
end

function Utility:MakeDraggable(topbar, mainFrame)
    local dragging, dragInput, dragStart, startPos

    local function update(input)
        local delta = input.Position - dragStart
        Utility:Tween(mainFrame, TweenInfo.new(0.1), {
            Position = UDim2.new(
                startPos.X.Scale, 
                startPos.X.Offset + delta.X, 
                startPos.Y.Scale, 
                startPos.Y.Offset + delta.Y
            )
        })
    end

    topbar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = mainFrame.Position

            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)

    topbar.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
            dragInput = input
        end
    end)

    UserInputService.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            update(input)
        end
    end)
end

--// Biblioteca Principal
local Library = {}
Library.__index = Library
Library.Theme = {
    Background = Color3.fromRGB(25, 25, 25),
    Sidebar = Color3.fromRGB(30, 30, 30),
    ElementBackground = Color3.fromRGB(35, 35, 35),
    Text = Color3.fromRGB(240, 240, 240),
    TextDark = Color3.fromRGB(150, 150, 150),
    Accent = Color3.fromRGB(0, 120, 215), -- Azul Padrão
    Success = Color3.fromRGB(46, 204, 113),
    Error = Color3.fromRGB(231, 76, 60)
}

-- Variável para controlar a visibilidade global
local UIHidden = false

function Library.new(config)
    local self = setmetatable({}, Library)
    self.Name = config.Name or "MyRobloxUI"
    self.KeySystem = config.KeySystem or false
    self.Key = config.Key or ""
    self.KeyLink = config.KeyLink or ""
    
    -- Container Principal (ScreenGui)
    self.Gui = Utility:Create("ScreenGui", {
        Name = self.Name,
        Parent = RunService:IsStudio() and LocalPlayer.PlayerGui or CoreGui,
        ZIndexBehavior = Enum.ZIndexBehavior.Sibling,
        ResetOnSpawn = false
    })

    -- Container de Notificações
    self.NotificationArea = Utility:Create("Frame", {
        Name = "NotificationArea",
        Parent = self.Gui,
        BackgroundTransparency = 1,
        Position = UDim2.new(1, -320, 1, -20), -- Canto inferior direito
        AnchorPoint = Vector2.new(0, 1),
        Size = UDim2.new(0, 300, 0, 0), -- Cresce para cima
    })
    
    local UIListLayoutNotif = Utility:Create("UIListLayout", {
        Parent = self.NotificationArea,
        SortOrder = Enum.SortOrder.LayoutOrder,
        Padding = UDim.new(0, 5),
        VerticalAlignment = Enum.VerticalAlignment.Bottom
    })

    return self
end

--// Sistema de Notificação
function Library:Notify(title, text, duration)
    duration = duration or 3
    
    local notifFrame = Utility:Create("Frame", {
        Parent = self.NotificationArea,
        BackgroundColor3 = self.Theme.Sidebar,
        Size = UDim2.new(1, 0, 0, 60),
        BackgroundTransparency = 0.1,
        BorderSizePixel = 0
    })
    
    Utility:Create("UICorner", {Parent = notifFrame, CornerRadius = UDim.new(0, 6)})
    
    local line = Utility:Create("Frame", {
        Parent = notifFrame,
        BackgroundColor3 = self.Theme.Accent,
        Size = UDim2.new(0, 4, 1, 0),
        BorderSizePixel = 0
    })
    Utility:Create("UICorner", {Parent = line, CornerRadius = UDim.new(0, 6)})
    
    Utility:Create("TextLabel", {
        Parent = notifFrame,
        Text = title,
        Font = Enum.Font.GothamBold,
        TextSize = 14,
        TextColor3 = self.Theme.Text,
        BackgroundTransparency = 1,
        Position = UDim2.new(0, 12, 0, 8),
        Size = UDim2.new(1, -20, 0, 20),
        TextXAlignment = Enum.TextXAlignment.Left
    })
    
    Utility:Create("TextLabel", {
        Parent = notifFrame,
        Text = text,
        Font = Enum.Font.Gotham,
        TextSize = 12,
        TextColor3 = self.Theme.TextDark,
        BackgroundTransparency = 1,
        Position = UDim2.new(0, 12, 0, 28),
        Size = UDim2.new(1, -20, 0, 20),
        TextXAlignment = Enum.TextXAlignment.Left,
        TextWrapped = true
    })
    
    -- Animação de entrada
    notifFrame.BackgroundTransparency = 1
    Utility:Tween(notifFrame, TweenInfo.new(0.3), {BackgroundTransparency = 0.1})
    
    task.delay(duration, function()
        local out = Utility:Tween(notifFrame, TweenInfo.new(0.3), {BackgroundTransparency = 1})
        out.Completed:Wait()
        notifFrame:Destroy()
    end)
end

--// Sistema de Key
function Library:InitKeySystem(onSuccess)
    if not self.KeySystem then
        onSuccess()
        return
    end

    local Blur = Utility:Create("BlurEffect", {
        Parent = game:GetService("Lighting"),
        Size = 0
    })
    Utility:Tween(Blur, TweenInfo.new(1), {Size = 18})

    local KeyFrame = Utility:Create("Frame", {
        Parent = self.Gui,
        BackgroundColor3 = self.Theme.Background,
        Size = UDim2.new(0, 400, 0, 250),
        Position = UDim2.new(0.5, 0, 0.5, 0),
        AnchorPoint = Vector2.new(0.5, 0.5),
        BorderSizePixel = 0
    })
    Utility:Create("UICorner", {Parent = KeyFrame, CornerRadius = UDim.new(0, 8)})
    
    -- Título
    Utility:Create("TextLabel", {
        Parent = KeyFrame,
        Text = "Security Check",
        Font = Enum.Font.GothamBold,
        TextSize = 24,
        TextColor3 = self.Theme.Text,
        Size = UDim2.new(1, 0, 0, 50),
        BackgroundTransparency = 1
    })

    -- Input
    local InputBox = Utility:Create("TextBox", {
        Parent = KeyFrame,
        BackgroundColor3 = self.Theme.ElementBackground,
        Size = UDim2.new(0.8, 0, 0, 40),
        Position = UDim2.new(0.1, 0, 0.35, 0),
        Font = Enum.Font.Gotham,
        Text = "",
        PlaceholderText = "Enter Key Here...",
        TextColor3 = self.Theme.Text,
        PlaceholderColor3 = self.Theme.TextDark,
        TextSize = 14
    })
    Utility:Create("UICorner", {Parent = InputBox, CornerRadius = UDim.new(0, 6)})

    -- Botão Submit
    local SubmitBtn = Utility:Create("TextButton", {
        Parent = KeyFrame,
        BackgroundColor3 = self.Theme.Accent,
        Size = UDim2.new(0.8, 0, 0, 40),
        Position = UDim2.new(0.1, 0, 0.6, 0),
        Font = Enum.Font.GothamBold,
        Text = "Verify Key",
        TextColor3 = self.Theme.Text,
        TextSize = 14,
        AutoButtonColor = false
    })
    Utility:Create("UICorner", {Parent = SubmitBtn, CornerRadius = UDim.new(0, 6)})

    -- Lógica
    SubmitBtn.MouseButton1Click:Connect(function()
        if InputBox.Text == self.Key then
            SubmitBtn.Text = "Success!"
            SubmitBtn.BackgroundColor3 = self.Theme.Success
            task.wait(0.5)
            Utility:Tween(KeyFrame, TweenInfo.new(0.5), {Position = UDim2.new(0.5, 0, 1.5, 0)})
            Utility:Tween(Blur, TweenInfo.new(0.5), {Size = 0})
            task.wait(0.5)
            KeyFrame:Destroy()
            Blur:Destroy()
            onSuccess()
        else
            local oldColor = InputBox.BackgroundColor3
            Utility:Tween(InputBox, TweenInfo.new(0.1), {BackgroundColor3 = self.Theme.Error})
            task.wait(0.2)
            Utility:Tween(InputBox, TweenInfo.new(0.3), {BackgroundColor3 = oldColor})
            self:Notify("Error", "Invalid Key provided.", 2)
        end
    end)
end

--// Criação da Janela Principal
function Library:CreateWindow()
    local Window = {}
    
    -- Frame Principal
    local Main = Utility:Create("Frame", {
        Name = "MainFrame",
        Parent = self.Gui,
        BackgroundColor3 = self.Theme.Background,
        Size = UDim2.new(0, 600, 0, 400),
        Position = UDim2.new(0.5, 0, 0.5, 0),
        AnchorPoint = Vector2.new(0.5, 0.5),
        BorderSizePixel = 0,
        ClipsDescendants = true
    })
    Utility:Create("UICorner", {Parent = Main, CornerRadius = UDim.new(0, 8)})

    -- Topbar
    local Topbar = Utility:Create("Frame", {
        Name = "Topbar",
        Parent = Main,
        BackgroundColor3 = self.Theme.Sidebar,
        Size = UDim2.new(1, 0, 0, 40),
        BorderSizePixel = 0
    })
    Utility:Create("UICorner", {Parent = Topbar, CornerRadius = UDim.new(0, 8)})
    -- Correção para cantos inferiores da topbar ficarem retos
    local TopbarFiller = Utility:Create("Frame", {
        Parent = Topbar,
        BackgroundColor3 = self.Theme.Sidebar,
        Size = UDim2.new(1, 0, 0, 10),
        Position = UDim2.new(0, 0, 1, -10),
        BorderSizePixel = 0
    })

    -- Título
    Utility:Create("TextLabel", {
        Parent = Topbar,
        Text = self.Name,
        Font = Enum.Font.GothamBold,
        TextSize = 16,
        TextColor3 = self.Theme.Text,
        Size = UDim2.new(0, 200, 1, 0),
        Position = UDim2.new(0, 15, 0, 0),
        BackgroundTransparency = 1,
        TextXAlignment = Enum.TextXAlignment.Left
    })

    -- Botão de Fechar
    local CloseBtn = Utility:Create("ImageButton", {
        Parent = Topbar,
        BackgroundTransparency = 1,
        Size = UDim2.new(0, 20, 0, 20),
        Position = UDim2.new(1, -30, 0.5, -10),
        Image = "rbxassetid://6031094678", -- Ícone X
        ImageColor3 = self.Theme.TextDark
    })
    
    CloseBtn.MouseEnter:Connect(function()
        Utility:Tween(CloseBtn, TweenInfo.new(0.2), {ImageColor3 = self.Theme.Error})
    end)
    CloseBtn.MouseLeave:Connect(function()
        Utility:Tween(CloseBtn, TweenInfo.new(0.2), {ImageColor3 = self.Theme.TextDark})
    end)
    CloseBtn.MouseButton1Click:Connect(function()
        UIHidden = not UIHidden
        if UIHidden then
            Utility:Tween(Main, TweenInfo.new(0.3), {Size = UDim2.new(0, 600, 0, 0)})
        end
    end)

    -- Toggle Keybind (RightControl) para reabrir
    UserInputService.InputBegan:Connect(function(input, processed)
        if input.KeyCode == Enum.KeyCode.RightControl then
            UIHidden = not UIHidden
            if UIHidden then
                Utility:Tween(Main, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Size = UDim2.new(0, 600, 0, 0)})
            else
                Utility:Tween(Main, TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {Size = UDim2.new(0, 600, 0, 400)})
            end
        end
    end)

    Utility:MakeDraggable(Topbar, Main)

    -- Container de Abas (Sidebar)
    local TabContainer = Utility:Create("ScrollingFrame", {
        Name = "TabContainer",
        Parent = Main,
        BackgroundColor3 = self.Theme.Sidebar,
        Size = UDim2.new(0, 150, 1, -40),
        Position = UDim2.new(0, 0, 0, 40),
        BorderSizePixel = 0,
        ScrollBarThickness = 2,
        CanvasSize = UDim2.new(0, 0, 0, 0)
    })
    
    local TabListLayout = Utility:Create("UIListLayout", {
        Parent = TabContainer,
        SortOrder = Enum.SortOrder.LayoutOrder,
        Padding = UDim.new(0, 5),
        HorizontalAlignment = Enum.HorizontalAlignment.Center
    })
    Utility:Create("UIPadding", {Parent = TabContainer, PaddingTop = UDim.new(0, 10)})

    -- Container de Páginas
    local PageContainer = Utility:Create("Frame", {
        Name = "PageContainer",
        Parent = Main,
        BackgroundColor3 = Color3.fromRGB(0,0,0),
        BackgroundTransparency = 1,
        Size = UDim2.new(1, -160, 1, -50),
        Position = UDim2.new(0, 155, 0, 45),
        BorderSizePixel = 0
    })

    -- Auto-redimensionar TabContainer
    TabListLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
        TabContainer.CanvasSize = UDim2.new(0, 0, 0, TabListLayout.AbsoluteContentSize.Y + 20)
    end)

    --// Funções da Janela
    function Window:Tab(name, iconId)
        local Tab = {}
        
        -- Botão da Aba
        local TabBtn = Utility:Create("TextButton", {
            Parent = TabContainer,
            BackgroundColor3 = self.Theme.Sidebar,
            Size = UDim2.new(0, 130, 0, 35),
            Text = "",
            AutoButtonColor = false
        })
        Utility:Create("UICorner", {Parent = TabBtn, CornerRadius = UDim.new(0, 6)})
        
        local TabTitle = Utility:Create("TextLabel", {
            Parent = TabBtn,
            Text = name,
            Font = Enum.Font.GothamMedium,
            TextSize = 13,
            TextColor3 = self.Theme.TextDark,
            Size = UDim2.new(1, -10, 1, 0),
            Position = UDim2.new(0, 10, 0, 0),
            BackgroundTransparency = 1,
            TextXAlignment = Enum.TextXAlignment.Left
        })

        -- Página de Elementos
        local Page = Utility:Create("ScrollingFrame", {
            Name = name .. "_Page",
            Parent = PageContainer,
            BackgroundColor3 = Color3.fromRGB(0,0,0),
            BackgroundTransparency = 1,
            Size = UDim2.new(1, 0, 1, 0),
            Visible = false,
            ScrollBarThickness = 4,
            BorderSizePixel = 0
        })
        
        local PageLayout = Utility:Create("UIListLayout", {
            Parent = Page,
            SortOrder = Enum.SortOrder.LayoutOrder,
            Padding = UDim.new(0, 6),
            HorizontalAlignment = Enum.HorizontalAlignment.Center
        })
        Utility:Create("UIPadding", {Parent = Page, PaddingTop = UDim.new(0, 5), PaddingBottom = UDim.new(0, 5)})

        PageLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
            Page.CanvasSize = UDim2.new(0, 0, 0, PageLayout.AbsoluteContentSize.Y + 10)
        end)

        -- Lógica de Seleção
        TabBtn.MouseButton1Click:Connect(function()
            -- Resetar todas as abas
            for _, child in pairs(TabContainer:GetChildren()) do
                if child:IsA("TextButton") then
                    Utility:Tween(child, TweenInfo.new(0.2), {BackgroundColor3 = self.Theme.Sidebar})
                    Utility:Tween(child:FindFirstChild("TextLabel"), TweenInfo.new(0.2), {TextColor3 = self.Theme.TextDark})
                end
            end
            for _, child in pairs(PageContainer:GetChildren()) do
                child.Visible = false
            end
            
            -- Ativar atual
            Utility:Tween(TabBtn, TweenInfo.new(0.2), {BackgroundColor3 = self.Theme.ElementBackground})
            Utility:Tween(TabTitle, TweenInfo.new(0.2), {TextColor3 = self.Theme.Accent})
            Page.Visible = true
        end)

        -- Selecionar a primeira aba por padrão
        if #TabContainer:GetChildren() == 2 then -- 1 é UIListLayout, 2 é o primeiro botão
             -- Simula clique
             TabBtn.BackgroundColor3 = self.Theme.ElementBackground
             TabTitle.TextColor3 = self.Theme.Accent
             Page.Visible = true
        end

        -- Elementos
        
        --// LABEL
        function Tab:Label(text)
            local LabelFrame = Utility:Create("Frame", {
                Parent = Page,
                BackgroundColor3 = self.Theme.ElementBackground,
                Size = UDim2.new(1, -10, 0, 30),
            })
            Utility:Create("UICorner", {Parent = LabelFrame, CornerRadius = UDim.new(0, 4)})
            
            Utility:Create("TextLabel", {
                Parent = LabelFrame,
                Text = text,
                Font = Enum.Font.Gotham,
                TextSize = 13,
                TextColor3 = self.Theme.Text,
                Size = UDim2.new(1, 0, 1, 0),
                BackgroundTransparency = 1
            })
        end

        --// BUTTON
        function Tab:Button(text, callback)
            callback = callback or function() end
            
            local BtnFrame = Utility:Create("TextButton", {
                Parent = Page,
                BackgroundColor3 = self.Theme.ElementBackground,
                Size = UDim2.new(1, -10, 0, 35),
                Text = "",
                AutoButtonColor = false
            })
            Utility:Create("UICorner", {Parent = BtnFrame, CornerRadius = UDim.new(0, 4)})

            local BtnText = Utility:Create("TextLabel", {
                Parent = BtnFrame,
                Text = text,
                Font = Enum.Font.GothamMedium,
                TextSize = 13,
                TextColor3 = self.Theme.Text,
                Size = UDim2.new(1, 0, 1, 0),
                BackgroundTransparency = 1
            })

            BtnFrame.MouseButton1Click:Connect(function()
                -- Efeito de Ripple Simples (Fade)
                local Ripple = Utility:Create("Frame", {
                    Parent = BtnFrame,
                    BackgroundColor3 = Color3.new(1,1,1),
                    BackgroundTransparency = 0.8,
                    Position = UDim2.new(0, 0, 0, 0),
                    Size = UDim2.new(1, 0, 1, 0)
                })
                Utility:Create("UICorner", {Parent = Ripple, CornerRadius = UDim.new(0, 4)})
                local fade = Utility:Tween(Ripple, TweenInfo.new(0.3), {BackgroundTransparency = 1})
                fade.Completed:Connect(function() Ripple:Destroy() end)
                
                callback()
            end)
        end

        --// TOGGLE
        function Tab:Toggle(text, default, callback)
            callback = callback or function() end
            local toggled = default or false

            local ToggleFrame = Utility:Create("TextButton", {
                Parent = Page,
                BackgroundColor3 = self.Theme.ElementBackground,
                Size = UDim2.new(1, -10, 0, 35),
                Text = "",
                AutoButtonColor = false
            })
            Utility:Create("UICorner", {Parent = ToggleFrame, CornerRadius = UDim.new(0, 4)})

            Utility:Create("TextLabel", {
                Parent = ToggleFrame,
                Text = text,
                Font = Enum.Font.GothamMedium,
                TextSize = 13,
                TextColor3 = self.Theme.Text,
                Size = UDim2.new(1, -60, 1, 0),
                Position = UDim2.new(0, 10, 0, 0),
                BackgroundTransparency = 1,
                TextXAlignment = Enum.TextXAlignment.Left
            })

            local SwitchBg = Utility:Create("Frame", {
                Parent = ToggleFrame,
                BackgroundColor3 = toggled and self.Theme.Accent or Color3.fromRGB(60, 60, 60),
                Size = UDim2.new(0, 40, 0, 20),
                Position = UDim2.new(1, -50, 0.5, -10)
            })
            Utility:Create("UICorner", {Parent = SwitchBg, CornerRadius = UDim.new(1, 0)})

            local SwitchCircle = Utility:Create("Frame", {
                Parent = SwitchBg,
                BackgroundColor3 = Color3.fromRGB(255, 255, 255),
                Size = UDim2.new(0, 16, 0, 16),
                Position = toggled and UDim2.new(1, -18, 0.5, -8) or UDim2.new(0, 2, 0.5, -8)
            })
            Utility:Create("UICorner", {Parent = SwitchCircle, CornerRadius = UDim.new(1, 0)})

            ToggleFrame.MouseButton1Click:Connect(function()
                toggled = not toggled
                
                Utility:Tween(SwitchBg, TweenInfo.new(0.2), {
                    BackgroundColor3 = toggled and self.Theme.Accent or Color3.fromRGB(60, 60, 60)
                })
                Utility:Tween(SwitchCircle, TweenInfo.new(0.2), {
                    Position = toggled and UDim2.new(1, -18, 0.5, -8) or UDim2.new(0, 2, 0.5, -8)
                })
                
                callback(toggled)
            end)
        end

        --// SLIDER
        function Tab:Slider(text, min, max, default, callback)
            callback = callback or function() end
            local value = default or min
            local dragging = false

            local SliderFrame = Utility:Create("Frame", {
                Parent = Page,
                BackgroundColor3 = self.Theme.ElementBackground,
                Size = UDim2.new(1, -10, 0, 50)
            })
            Utility:Create("UICorner", {Parent = SliderFrame, CornerRadius = UDim.new(0, 4)})

            Utility:Create("TextLabel", {
                Parent = SliderFrame,
                Text = text,
                Font = Enum.Font.GothamMedium,
                TextSize = 13,
                TextColor3 = self.Theme.Text,
                Size = UDim2.new(1, -20, 0, 20),
                Position = UDim2.new(0, 10, 0, 5),
                BackgroundTransparency = 1,
                TextXAlignment = Enum.TextXAlignment.Left
            })

            local ValueLabel = Utility:Create("TextLabel", {
                Parent = SliderFrame,
                Text = tostring(value),
                Font = Enum.Font.GothamBold,
                TextSize = 13,
                TextColor3 = self.Theme.TextDark,
                Size = UDim2.new(0, 50, 0, 20),
                Position = UDim2.new(1, -60, 0, 5),
                BackgroundTransparency = 1,
                TextXAlignment = Enum.TextXAlignment.Right
            })

            local SliderBar = Utility:Create("Frame", {
                Parent = SliderFrame,
                BackgroundColor3 = Color3.fromRGB(60, 60, 60),
                Size = UDim2.new(1, -20, 0, 6),
                Position = UDim2.new(0, 10, 0, 35)
            })
            Utility:Create("UICorner", {Parent = SliderBar, CornerRadius = UDim.new(1, 0)})

            local Fill = Utility:Create("Frame", {
                Parent = SliderBar,
                BackgroundColor3 = self.Theme.Accent,
                Size = UDim2.new((value - min) / (max - min), 0, 1, 0)
            })
            Utility:Create("UICorner", {Parent = Fill, CornerRadius = UDim.new(1, 0)})
            
            local Trigger = Utility:Create("TextButton", {
                Parent = SliderBar,
                BackgroundTransparency = 1,
                Size = UDim2.new(1, 0, 1, 0),
                Text = ""
            })

            local function Update(input)
                local pos = UDim2.new(math.clamp((input.Position.X - SliderBar.AbsolutePosition.X) / SliderBar.AbsoluteSize.X, 0, 1), 0, 1, 0)
                Utility:Tween(Fill, TweenInfo.new(0.1), {Size = pos})
                
                local newValue = math.floor(min + ((max - min) * pos.X.Scale))
                ValueLabel.Text = tostring(newValue)
                callback(newValue)
            end

            Trigger.InputBegan:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    dragging = true
                    Update(input)
                end
            end)

            UserInputService.InputEnded:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    dragging = false
                end
            end)

            UserInputService.InputChanged:Connect(function(input)
                if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
                    Update(input)
                end
            end)
        end

        --// TEXTBOX
        function Tab:TextBox(text, placeholder, callback)
            callback = callback or function() end
            
            local BoxFrame = Utility:Create("Frame", {
                Parent = Page,
                BackgroundColor3 = self.Theme.ElementBackground,
                Size = UDim2.new(1, -10, 0, 50)
            })
            Utility:Create("UICorner", {Parent = BoxFrame, CornerRadius = UDim.new(0, 4)})

            Utility:Create("TextLabel", {
                Parent = BoxFrame,
                Text = text,
                Font = Enum.Font.GothamMedium,
                TextSize = 13,
                TextColor3 = self.Theme.Text,
                Size = UDim2.new(1, -20, 0, 20),
                Position = UDim2.new(0, 10, 0, 5),
                BackgroundTransparency = 1,
                TextXAlignment = Enum.TextXAlignment.Left
            })

            local Input = Utility:Create("TextBox", {
                Parent = BoxFrame,
                BackgroundColor3 = self.Theme.Background,
                Size = UDim2.new(1, -20, 0, 20),
                Position = UDim2.new(0, 10, 0, 25),
                Font = Enum.Font.Gotham,
                Text = "",
                PlaceholderText = placeholder or "Type here...",
                TextColor3 = self.Theme.Text,
                PlaceholderColor3 = self.Theme.TextDark,
                TextSize = 12
            })
            Utility:Create("UICorner", {Parent = Input, CornerRadius = UDim.new(0, 4)})

            Input.FocusLost:Connect(function(enterPressed)
                if enterPressed then
                    callback(Input.Text)
                end
            end)
        end

        --// DROPDOWN
        function Tab:Dropdown(text, options, callback)
            callback = callback or function() end
            local expanded = false
            
            local DropdownFrame = Utility:Create("Frame", {
                Parent = Page,
                BackgroundColor3 = self.Theme.ElementBackground,
                Size = UDim2.new(1, -10, 0, 35),
                ClipsDescendants = true
            })
            Utility:Create("UICorner", {Parent = DropdownFrame, CornerRadius = UDim.new(0, 4)})

            local Header = Utility:Create("TextButton", {
                Parent = DropdownFrame,
                BackgroundTransparency = 1,
                Size = UDim2.new(1, 0, 0, 35),
                Text = "",
                AutoButtonColor = false
            })

            local Title = Utility:Create("TextLabel", {
                Parent = Header,
                Text = text,
                Font = Enum.Font.GothamMedium,
                TextSize = 13,
                TextColor3 = self.Theme.Text,
                Size = UDim2.new(1, -40, 1, 0),
                Position = UDim2.new(0, 10, 0, 0),
                BackgroundTransparency = 1,
                TextXAlignment = Enum.TextXAlignment.Left
            })

            local Icon = Utility:Create("ImageLabel", {
                Parent = Header,
                BackgroundTransparency = 1,
                Image = "rbxassetid://6031090990", -- Seta para baixo
                Size = UDim2.new(0, 20, 0, 20),
                Position = UDim2.new(1, -30, 0.5, -10),
                ImageColor3 = self.Theme.TextDark
            })

            local OptionContainer = Utility:Create("Frame", {
                Parent = DropdownFrame,
                BackgroundColor3 = self.Theme.Background,
                Size = UDim2.new(1, -10, 0, 0),
                Position = UDim2.new(0, 5, 0, 35),
                BackgroundTransparency = 1
            })
            
            local OptionLayout = Utility:Create("UIListLayout", {
                Parent = OptionContainer,
                SortOrder = Enum.SortOrder.LayoutOrder,
                Padding = UDim.new(0, 2)
            })

            -- Atualiza altura do dropdown baseado nos filhos
            local function RefreshHeight()
                if expanded then
                    local h = #options * 25 + 40
                    Utility:Tween(DropdownFrame, TweenInfo.new(0.3), {Size = UDim2.new(1, -10, 0, h)})
                    Utility:Tween(Icon, TweenInfo.new(0.3), {Rotation = 180})
                else
                    Utility:Tween(DropdownFrame, TweenInfo.new(0.3), {Size = UDim2.new(1, -10, 0, 35)})
                    Utility:Tween(Icon, TweenInfo.new(0.3), {Rotation = 0})
                end
            end

            -- Gerar Opções
            local function BuildOptions()
                for _, child in pairs(OptionContainer:GetChildren()) do
                    if child:IsA("TextButton") then child:Destroy() end
                end
                
                for _, opt in ipairs(options) do
                    local OptBtn = Utility:Create("TextButton", {
                        Parent = OptionContainer,
                        BackgroundColor3 = self.Theme.Sidebar,
                        Size = UDim2.new(1, 0, 0, 25),
                        Text = opt,
                        Font = Enum.Font.Gotham,
                        TextColor3 = self.Theme.TextDark,
                        TextSize = 12,
                        AutoButtonColor = false
                    })
                    Utility:Create("UICorner", {Parent = OptBtn, CornerRadius = UDim.new(0, 4)})

                    OptBtn.MouseButton1Click:Connect(function()
                        Title.Text = text .. ": " .. opt
                        callback(opt)
                        expanded = false
                        RefreshHeight()
                    end)
                end
            end

            BuildOptions()

            Header.MouseButton1Click:Connect(function()
                expanded = not expanded
                RefreshHeight()
            end)
        end

        --// COLOR PICKER
        function Tab:ColorPicker(text, default, callback)
            callback = callback or function() end
            local color = default or Color3.new(1,1,1)
            local expanded = false

            local PickerFrame = Utility:Create("Frame", {
                Parent = Page,
                BackgroundColor3 = self.Theme.ElementBackground,
                Size = UDim2.new(1, -10, 0, 35),
                ClipsDescendants = true
            })
            Utility:Create("UICorner", {Parent = PickerFrame, CornerRadius = UDim.new(0, 4)})

            local Header = Utility:Create("TextButton", {
                Parent = PickerFrame,
                BackgroundTransparency = 1,
                Size = UDim2.new(1, 0, 0, 35),
                Text = "",
                AutoButtonColor = false
            })

            Utility:Create("TextLabel", {
                Parent = Header,
                Text = text,
                Font = Enum.Font.GothamMedium,
                TextSize = 13,
                TextColor3 = self.Theme.Text,
                Size = UDim2.new(1, -50, 1, 0),
                Position = UDim2.new(0, 10, 0, 0),
                BackgroundTransparency = 1,
                TextXAlignment = Enum.TextXAlignment.Left
            })

            local ColorPreview = Utility:Create("Frame", {
                Parent = Header,
                BackgroundColor3 = color,
                Size = UDim2.new(0, 25, 0, 25),
                Position = UDim2.new(1, -35, 0.5, -12.5)
            })
            Utility:Create("UICorner", {Parent = ColorPreview, CornerRadius = UDim.new(0, 4)})

            -- Container interno
            local Palette = Utility:Create("Frame", {
                Parent = PickerFrame,
                Size = UDim2.new(1, -20, 0, 100),
                Position = UDim2.new(0, 10, 0, 40),
                BackgroundTransparency = 1
            })

            -- Imagem RGB (Rainbow)
            local RGBImage = Utility:Create("ImageButton", {
                Parent = Palette,
                Size = UDim2.new(1, 0, 0, 80),
                Image = "rbxassetid://4155801252", -- Rainbow gradient
                BackgroundColor3 = Color3.new(1,1,1),
                BorderSizePixel = 0
            })
            
            Header.MouseButton1Click:Connect(function()
                expanded = not expanded
                if expanded then
                    Utility:Tween(PickerFrame, TweenInfo.new(0.3), {Size = UDim2.new(1, -10, 0, 130)})
                else
                    Utility:Tween(PickerFrame, TweenInfo.new(0.3), {Size = UDim2.new(1, -10, 0, 35)})
                end
            end)

            -- Lógica simplificada de seleção de cor (apenas matiz para este exemplo compacto)
            local dragging = false
            
            local function UpdateColor(input)
                local posX = math.clamp((input.Position.X - RGBImage.AbsolutePosition.X) / RGBImage.AbsoluteSize.X, 0, 1)
                local posY = math.clamp((input.Position.Y - RGBImage.AbsolutePosition.Y) / RGBImage.AbsoluteSize.Y, 0, 1)
                
                -- Cálculo aproximado de cor baseado na posição
                local h = posX
                local s = 1 - posY
                local v = 1
                
                local newColor = Color3.fromHSV(h, s, v)
                ColorPreview.BackgroundColor3 = newColor
                callback(newColor)
            end

            RGBImage.InputBegan:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    dragging = true
                    UpdateColor(input)
                end
            end)
            
            UserInputService.InputEnded:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end
            end)
            
            UserInputService.InputChanged:Connect(function(input)
                if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
                    UpdateColor(input)
                end
            end)
        end
        
        --// KEYBIND
        function Tab:Keybind(text, default, callback)
            callback = callback or function() end
            local key = default or Enum.KeyCode.E
            local binding = false

            local BindFrame = Utility:Create("Frame", {
                Parent = Page,
                BackgroundColor3 = self.Theme.ElementBackground,
                Size = UDim2.new(1, -10, 0, 35)
            })
            Utility:Create("UICorner", {Parent = BindFrame, CornerRadius = UDim.new(0, 4)})

            Utility:Create("TextLabel", {
                Parent = BindFrame,
                Text = text,
                Font = Enum.Font.GothamMedium,
                TextSize = 13,
                TextColor3 = self.Theme.Text,
                Size = UDim2.new(1, -100, 1, 0),
                Position = UDim2.new(0, 10, 0, 0),
                BackgroundTransparency = 1,
                TextXAlignment = Enum.TextXAlignment.Left
            })

            local BindBtn = Utility:Create("TextButton", {
                Parent = BindFrame,
                BackgroundColor3 = self.Theme.Sidebar,
                Size = UDim2.new(0, 80, 0, 25),
                Position = UDim2.new(1, -90, 0.5, -12.5),
                Text = key.Name,
                Font = Enum.Font.GothamBold,
                TextColor3 = self.Theme.TextDark,
                TextSize = 12
            })
            Utility:Create("UICorner", {Parent = BindBtn, CornerRadius = UDim.new(0, 4)})

            BindBtn.MouseButton1Click:Connect(function()
                binding = true
                BindBtn.Text = "..."
                
                local conn
                conn = UserInputService.InputBegan:Connect(function(input)
                    if input.UserInputType == Enum.UserInputType.Keyboard then
                        key = input.KeyCode
                        BindBtn.Text = key.Name
                        binding = false
                        conn:Disconnect()
                        callback(key)
                    end
                end)
            end)
        end
        
        --// SEARCH BAR (No topo da página)
        function Tab:SearchBar()
            local SearchFrame = Utility:Create("Frame", {
                Parent = Page,
                BackgroundColor3 = self.Theme.ElementBackground,
                Size = UDim2.new(1, -10, 0, 30),
                LayoutOrder = -1 -- Garante que fique no topo
            })
            Utility:Create("UICorner", {Parent = SearchFrame, CornerRadius = UDim.new(0, 4)})
            
            local SearchInput = Utility:Create("TextBox", {
                Parent = SearchFrame,
                BackgroundTransparency = 1,
                Size = UDim2.new(1, -30, 1, 0),
                Position = UDim2.new(0, 10, 0, 0),
                Font = Enum.Font.Gotham,
                Text = "",
                PlaceholderText = "Search...",
                TextColor3 = self.Theme.Text,
                PlaceholderColor3 = self.Theme.TextDark,
                TextSize = 13,
                TextXAlignment = Enum.TextXAlignment.Left
            })
            
            local Magnifier = Utility:Create("ImageLabel", {
                Parent = SearchFrame,
                BackgroundTransparency = 1,
                Image = "rbxassetid://3926305904",
                ImageRectOffset = Vector2.new(964, 324),
                ImageRectSize = Vector2.new(36, 36),
                Size = UDim2.new(0, 20, 0, 20),
                Position = UDim2.new(1, -25, 0.5, -10),
                ImageColor3 = self.Theme.TextDark
            })

            SearchInput:GetPropertyChangedSignal("Text"):Connect(function()
                local query = SearchInput.Text:lower()
                for _, child in pairs(Page:GetChildren()) do
                    if child:IsA("Frame") or child:IsA("TextButton") then
                        -- Ignora o layout e a própria barra de busca
                        if child == SearchFrame then continue end
                        
                        -- Tenta encontrar labels dentro do elemento
                        local foundText = false
                        for _, desc in pairs(child:GetDescendants()) do
                            if desc:IsA("TextLabel") and desc.Text:lower():find(query) then
                                foundText = true
                                break
                            end
                        end
                        
                        child.Visible = foundText or query == ""
                    end
                end
                -- Recalcular canvas size
                PageLayout:ApplyLayout()
            end)
        end

        return Tab
    end

    return Window
end

return Library
