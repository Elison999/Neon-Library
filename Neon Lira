        else
            local close = CreateTween(MainFrame, {Size = UDim2.new(0, 0, 0, 0)}, 0.3)
            close.Completed:Connect(function()
                if not Library.IsOpen then MainFrame.Visible = false OpenBtnFrame.Visible = true end
            end)
        end
    end
