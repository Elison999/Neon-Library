        NT.Parent = NotifFrame
        NT.BackgroundTransparency = 1
        NT.Position = UDim2.new(0, 10, 0, 5)
        NT.Size = UDim2.new(1, -20, 0, 20)
        NT.Font = Enum.Font.GothamBold
        NT.Text = Title
        NT.TextColor3 = Color3.fromRGB(255, 255, 255)
        NT.TextSize = 14
